        android:text="Add"
        android:id="@+id/buttonadd2"
        />
    -->
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"      
        android:text="Launch Google"
        android:id="@+id/startActivity"
        />
